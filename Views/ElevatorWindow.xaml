<Window x:Class="ReefDash.ElevatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReefDash"
        mc:Ignorable="d"
        Title="Elevator" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Column 0 -->
        <ProgressBar x:Name="_heightBar" Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="20" Margin="5" />
        
        <!-- Column 1 -->
        <TextBox x:Name="_heightDisplay" Grid.Row="0" Grid.Column="1" Grid.RowSpan="7" HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />
        
        <!-- Column 2 -->
        <Label Content="Max Height:"  Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="L4 Height:"   Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="L3 Height:"   Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="L2 Height:"   Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="L1 Height:"   Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="Stow Height:" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="Min Height:"  Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />

        <!-- Column 3 -->
        <TextBox x:Name="_maxHeightDisplay"  Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />
        <TextBox x:Name="_l4HeightDisplay"   Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />
        <TextBox x:Name="_l3HeightDisplay"   Grid.Row="2" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />
        <TextBox x:Name="_l2HeightDisplay"   Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />
        <TextBox x:Name="_l1HeightDisplay"   Grid.Row="4" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />
        <TextBox x:Name="_stowHeightDisplay" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />
        <TextBox x:Name="_minHeightDisplay"  Grid.Row="6" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" Text="0.00" Margin="5" />

        <!-- Column 4 -->
        <Button Content="zero" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ZeroMax"  Margin="5" Padding="5" />
        <Button Content="zero" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ZeroL4"   Margin="5" Padding="5" />
        <Button Content="zero" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ZeroL3"   Margin="5" Padding="5" />
        <Button Content="zero" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ZeroL2"   Margin="5" Padding="5" />
        <Button Content="zero" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ZeroL1"   Margin="5" Padding="5" />
        <Button Content="zero" Grid.Row="5" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ZeroStow" Margin="5" Padding="5" />
        <Button Content="zero" Grid.Row="6" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ZeroMin"  Margin="5" Padding="5" />
    </Grid>
</Window>
